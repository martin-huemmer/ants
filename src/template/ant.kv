<AntHive>:
    size: self.width, self.height
    canvas:


<Terimal>:

    hiveObject: ant_hive

    AntHive:
        id: ant_hive
        center: self.parent.center

    GridLayout:

        cols: 2
        size_hint: 1, None
        height: 80

        GridLayout:
            cols: 4

            Label:
                text: 'Settings'
            ToggleButton:
                text: 'on'
                on_press: root.pheromoneStatus = self.state == 'down'

            Label:
                text: 'Pheromone'
            ToggleButton:
                text: 'on'
                on_press: root.pheromoneStatus = self.state == 'down'
                #on_release: root.pheromoneAnimate(self.state == 'down')

            Label:
                text: 'Counter'
            Label:
                text: str(root.hiveObject.counter)
                id: label

            Label:
                text: 'Size'
            TextInput:
                id: test
                text: '20'


        AnchorLayout:
            GridLayout:
                cols: 3
                size_hint: None, None
                size: self.minimum_size
                ToggleButton:
                    size_hint: None, None
                    size: 120, 40
                    text: 'Run simulation'
                    id: button1
                    on_state: root.animate(self.state == 'down')
                Button:
                    size_hint: None, None
                    size: 120, 40
                    text: 'Reset'
                    on_press: root.reset()
                Button:
                    size_hint: None, None
                    size: 120, 40
                    id: btnExit
                    text: "Exit"
                    on_press: app.stop()
